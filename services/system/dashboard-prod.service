[Unit]
Description=Dashboard Prod (Vite Preview)
After=dashboard-bridge.service
Wants=dashboard-bridge.service
StartLimitIntervalSec=300
StartLimitBurst=10

[Service]
Type=simple
WorkingDirectory=/opt/automateLinux/dashboard
ExecStart=/usr/bin/npx vite preview --port 3006 --host
Restart=on-failure
RestartSec=5s
User=root
Group=root
Environment=NODE_ENV=production
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
