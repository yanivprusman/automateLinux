[Unit]
Description=Public Transportation Dev Server
After=network.target daemon.service
Wants=daemon.service

[Service]
Type=simple
WorkingDirectory=/opt/dev/publicTransportation/frontend/public-transportation
ExecStart=/usr/bin/npm run dev -- --port 3003 --host
Restart=on-failure
RestartSec=5s
User=root
Group=root
Environment=NODE_ENV=development
Environment=PORT=3003
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
